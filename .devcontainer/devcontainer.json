{
  "name": "Codespace for Skills!",
  "image": "mcr.microsoft.com/vscode/devcontainers/universal:latest",
  "remoteUser": "codespace",
  "overrideCommand": false,
  "postCreateCommand": "echo '# Writing code upon codespace creation!'  >> codespace.md",  // Add this line
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot"
      ]
    },
    "codespaces": {
      "openFiles": [
        "codespace.md"
      ]
    }
  }
}
